{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "*.md",
        "*.log",
        "test/**"
      ],
      "message": "chore(release): publish"
    }
  },
  "npmClientArgs": [
    "--no-lockfile"
  ]
}
